{
  "version": "0.0.1",
  "description": "Packages related to making your own custom Make Live Launcher UI.",
  "repository": "git@github.com:make-live/toolkit.git",
  "author": "Make Live Team",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=14",
    "yarn": "^1.22"
  },
  "scripts": {
    "build": "yarn build:cjs && yarn build:esm",
    "build:cjs": "tsc -b",
    "build:esm": "tsc -b ./tsconfig.esm.json",
    "lint": "eslint .",
    "prepare": "yarn-deduplicate && husky install && yarn build",
    "test": "wsrun -tm test"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.2",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4",
    "wsrun": "^5.2.4",
    "yarn-deduplicate": "^5.0.0"
  }
}
