{
  "name": "@make-live/toolkit-dev",
  "version": "0.0.1",
  "description": "Development tools to help you create amazing Make Live custom UIs",
  "repository": "git@github.com:make-live/toolkit.git",
  "author": "Make Live Team",
  "license": "MIT",
  "private": true,
  "bin": {
    "make-live": "dist/index.js"
  },
  "engines": {
    "node": ">=14"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "scripts": {
    "build": "concurrently yarn:build:*",
    "build:client": "parcel build --dist-dir dist/client ./src/client/index.html",
    "build:server": "esbuild --bundle --platform=node --external:../../node_modules/* --outfile=dist/index.js src/index.ts",
    "dev": "concurrently yarn:dev:*",
    "dev:client": "parcel watch -p 9001 --dist-dir dist/client ./src/client/index.html",
    "dev:server": "node -r dotenv/config -r esbuild-register src/index.ts"
  },
  "dependencies": {
    "@make-live/toolkit": "^0.0.1",
    "chalk": "^4",
    "compression": "^1.7.4",
    "express": "^4.18.1",
    "lodash.omit": "^4.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rooks": "^5.11.2",
    "webrtc-adapter": "^8.1.1",
    "ws": "^8.8.1",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.3",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/lodash.omit": "^4.5.7",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@types/ws": "^8.5.3",
    "@types/yargs": "^17.0.10",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.2",
    "dotenv": "^16.0.0",
    "esbuild": "^0.14.50",
    "esbuild-register": "^3.3.3",
    "parcel": "^2.6.2",
    "postcss": "^8.4.14",
    "process": "^0.11.10",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.1.4",
    "typescript": "^4.7.4"
  }
}
